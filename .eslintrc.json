{
    // Prevent ESLint from looking at parent directories
    "root": true,
    "env": {
      "browser": true,
      "commonjs": true,
      "node": true,
      // Add support for ES6 features
      "es6": true
    },
    "rules": {
      "indent": ["error", 2],
      "quotes": ["error", "single"],
      "semi": ["error", "always"],
    }    
  }
  