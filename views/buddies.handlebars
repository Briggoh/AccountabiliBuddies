<form class="mx-1 mx-md-4" id="buddyEmailForm">

  <div class="d-flex flex-row align-items-center mb-4">
    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
    <div class="form-outline flex-fill mb-0">
      <input type="text" id="nameBuddy" class="form-control" />
      <label class="form-label" for="form3Example1c">Buddie's Name</label>
      <input type="text" id="emailBuddy" class="form-control" />
      <label class="form-label" for="form3Example1c">Buddie's Email</label>
    </div>
  </div>

  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
    <button class="btn btn-outline-info me-2" type="submit">Add</button>
  </div>

</form>

<div>
  Buddies:
</div>

{{#if buddies.length}}
<div id="userBuddy">
  {{#each buddies as |buddy| }}
  <div class="goal-card card m-3" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title"><a href="/buddies/{{id}}">{{name}}</a></h5>
    </div>
  </div>
  {{/each}}
</div>
{{/if}}

<script src="./js/buddy.js"></script>